<div class='container'>
  <div class='row'>
    <div class="col-md-3"></div>
    <div class='col-md-6'>
      <div class='list-book'>
        <h1>The list of author</h1>
          <table class='table table-striped table-condensed'>
             <tr>
                <th>Name</th>
                <th>Date of Birth</th>
                <th>Date of Death</th>
                <th>Delete</th>
              </tr>
            <% @authors.each do |author| %>
              <tr>
                <td><%= author.name %></td>
                <td><%= author.DoB %></td>
                <td><%= author.DoD %></td>
                <td><%= link_to "Destroy", author, method: :delete, data: { confirm: "Are you sure?"} %></td>
              </tr>
            <% end %>
          </table>
      </div>
      <div class='col-md-3'></div>
    </div>
  </div>
</div>
